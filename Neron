mecto = input('Ведите место: улица, квартира, гора, вулкан, деревня ')
vremia = input('Ведите время года: зима, весна, лето, осень ')
planet = input('Ведите планету солнечной системы: меркурий, венера, земля, марс, юпитер, сатурн, уран, нептун ')


if mecto == 'улица':
  print('уличное движение')
if mecto == 'квартира':
    print('квартира с одной кроватью')
if mecto == 'гора':
    print('гора Эльбрус')
if mecto == 'вулкан':
    print('действующий вулкан')
if mecto == 'деревня':
    print('деревенская свежесть')
    
    
if vremia == 'зима':
    print('зимний вечер')
if vremia == 'весна':
    print('свежесть')
if vremia == 'лето':
    print('летний день')
if vremia == 'осень':
    print('листопад')


if planet == 'меркурий':
    print('очень жарко')
if planet == 'венера':
    print('жарко')
if planet == 'земля':
    print('погодка супер')
if planet == 'марс':
    print('лучше одену шарф')
if planet == 'юпитер':
    print('брр холодно')
if planet == 'сатурн':
    print('как красиво')
if planet == 'уран':
    print('сосульки висят')        
if planet == 'нептун':
    print('Сидя в комнате')          
